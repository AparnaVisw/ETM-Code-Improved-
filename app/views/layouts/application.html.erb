<!DOCTYPE html>
<html>
  <head>
    <title>Timesheet Application</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

<body>
<div class="navbar navbar-inverse navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
      <%= link_to 'HOME', root_path,  method: :get, class: "btn btn-primary btn-default active" %>
        <span class="icon-bar"> </span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <div style="text-align:center">
      <a href="#"> EMPLOYEE TIMESHEET MANAGER </a>
      </div>
      <div class="nav-collapse">
        <ul class="nav">
        </ul>
      </div>
    </div>
  </div>
</div>
  <div class="container-fluid bodyClass">
  <div class="row">
  <% flash.each do |name, msg| %>
    <div class="alert alert-<%= name.to_s == 'notice' ? 'success' : 'danger' %>">
     <%= msg %>
    </div>
  <% end %>
    <div class="span9">  <%= yield %>
    <div class="span3">
    </div>
  </div>
  </div>
  <nav class="navbar navbar-inverse navbar-fixed-bottom">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand class="centre" href="#">Copyright Reserved </a>
    </div>
  </div>
</nav>
  </body>
</html>
