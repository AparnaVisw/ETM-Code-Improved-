
<div class="container">
<%= form_tag do %>
<div style="text-align:center" id="photo">
<%= image_tag(@employee.image.url) if @employee.image_stored? %>
</div>
<div style="text-align:center">
<h3>User details</h3>
</div>
<table id="albums" class="table table-bordered table-striped table-sm" cellspacing="10">
<div class="form-group">
  <thead class="thead-inverse">
    <tr>
      <th>NAME</th>
      <th>EMPLOYEE ID</th>
      <th>DATE OF BIRTH</th>
      <th>ADDRESS</th>
    </tr>
  </thead>
  </div>
<div class="form-group">
  <thead class="thead-inverse">
  <tr>
    <td> <%= @employee.name %> </td>
    <td> <%= @employee.empid %> </td>
    <td> <%= @employee.dob %> </td>
    <td> <%= @employee.address %> </td>
  </tr>
</thead>
</div>
</table>
<div style="text-align:center">
 <%= link_to '  EDIT  ', employees_edit_path(id: @employee.id) , class: "btn btn-primary"%>
</div>
</div>
<%end%>
