<div class="container" style="text-align:center">
  <h3> Timesheet Manager </h3>
</div>
<div class="container">
<%= form_tag do %>
  <table class="table table-bordered table-striped table-sm" cellspacing="10">
  <div class="form-group">
  <thead class="thead-inverse">
    <tr>
      <th> NAME </th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  </div>
<% @users.each do |user| %>
<div class="form-group">
  <tr>
    <td><%= user.name %></td>
    <td><%= link_to t('show_profile'), employee_path(id: user.id),class: "btn btn-primary btn-default active"%></td>
    <td><%= link_to t('new_timesheet'), new_timesheet_path(id: user.id),class: "btn btn-primary btn-default active"%></td>
    <td><%= link_to t('show_timesheets'), timesheets_path(id: user.id),class: "btn btn-primary btn-default active"%></td>
  </tr>
  </div>
<% end %>
<% end %>
</div>
