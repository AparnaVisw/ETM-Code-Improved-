<div class="container">
<%= form_for @user , class: "form-horizontal" , :as => :user, :url => employee_path(@user), :method => :PUT do |f| %>

<div style="text-align:center">
        <p> <%= t('edit_user') %></p>
</div>

<div class="form-group">
  <%= f.label :name , :class => "col-sm-2 control-label" %>
  <div class = "col-sm-10">
  <%= f.text_field :name , :class => "form-control" %><br>
  </div>
</div>

<div class="form-group">
  <%= f.label :empid , :class => "col-sm-2 control-label" %>
  <div class = "col-sm-10">
  <%= f.text_field :empid , :class => "form-control"%><br>
  </div>
</div>

<div class="form-group">
  <%= f.label :dob, :class => "col-sm-2 control-label" %>
  <div class = "col-sm-10">
  <%= f.date_field :dob , :class => "form-control"%><br>
  </div>
</div>

<div class="form-group">
  <%= f.label :address, :class => "col-sm-2 control-label" %>
  <div class = "col-sm-10">
  <%= f.text_field :address , :class => "form-control"%><br>
  </div>
</div>

<div class="form-group">
    <%= f.label :image, :class => "col-sm-2 control-label" %>
    <div class = "col-sm-10">
    <%= f.file_field :image %>
    </div>
  </div>

<div style="text-align:center">
  <%= f.submit t('save'), class: "btn btn-primary btn-default active"  %>
</div>
<% end %>
</div>



