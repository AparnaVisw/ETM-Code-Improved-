<div class="container">
<%= form_for @user , class: "form-horizontal" , :as => :user, :url => employees_update_path(@user), :method => :PUT do |f| %>

<div style="text-align:center">
        <p> Edit Timesheet </p>
</div>

<div class="form-group">
  <%= f.label :name , :class => "col-sm-2 control-label" %>
  <div class = "col-sm-10">
  <%= f.text_field :name , :class => "form-control" %><br>
  </div>
</div>

<div class="form-group">
  <%= f.label :empid , :class => "col-sm-2 control-label" %>
  <div class = "col-sm-10">
  <%= f.text_field :empid , :class => "form-control"%><br>
  </div>
</div>

<div class="form-group">
  <%= f.label :dob, :class => "col-sm-2 control-label" %>
  <div class = "col-sm-10">
  <%= f.number_field :dob , :class => "form-control"%><br>
  </div>
</div>

<div class="form-group">
  <%= f.label :address, :class => "col-sm-2 control-label" %>
  <div class = "col-sm-10">
  <%= f.text_field :address , :class => "form-control"%><br>
  </div>
</div>

<div style="text-align:center">
  <%= f.submit 'SAVE' , class: "btn btn-primary btn-default active"  %>

  <%= link_to 'HOME', root_path,  method: :get, class: "btn btn-primary btn-default active" %>
</div>
<% end %>
</div>



