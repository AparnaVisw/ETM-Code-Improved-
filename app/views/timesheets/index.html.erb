<div class="container">
  <%= form_tag do %>
    <div style="text-align:center">
        <h5><%= t('you_are_viewing') %> <b><%= @employee %></b></h5> </p>
    </div>

  <div id = "timesheets">
    <table id="timesheet" class="table table-bordered table-striped table-sm" cellspacing="10">
      <div class="form-group">
      <thead class="thead-inverse">
      <tr>
          <th> <%= t('project_name') %></th>
          <th> <%= (4.day.ago).to_date%> </th>
          <th> <%= (3.day.ago).to_date %> </th>
          <th> <%= (2.day.ago).to_date %> </th>
          <th> <%= (Date.yesterday).to_date %> </th>
          <th> <%= (Date.today).to_date %>,Today </th>
          <th> <%= t('submitted_on') %> </th>
      </tr>
      </thead>
      </div>
       <div class="form-group">
       <% @timesheets.each do |t| %>
      <tr>
          <td id ="def_project_name"> <%= if @all_projects[0][0] == t.project_id then @all_projects[0][1] else @all_projects[1][1] end %> </td>
          <td id ="four_days_b4"><%= link_to t.timespend,timesheets_edit_path(id:  @user.id,timesheet_id: t.id) if t.date_worked == (4.day.ago).to_date %> </td>
          <td id ="three_days_b4"><%= link_to t.timespend,timesheets_edit_path(id:  @user.id,timesheet_id: t.id) if t.date_worked == (3.day.ago).to_date %>  </td>
          <td id ="two_days_b4"> <%= link_to t.timespend,timesheets_edit_path(id:  @user.id,timesheet_id: t.id) if t.date_worked == (2.day.ago).to_date %> </td>
          <td id ="one_day_b4"><%= link_to t.timespend,timesheets_edit_path(id:  @user.id,timesheet_id: t.id) if t.date_worked == (Date.yesterday) %>  </td>
          <td id ="today">  <%= link_to t.timespend,timesheets_edit_path(id:  @user.id,timesheet_id: t.id) if t.date_worked == (Date.today) %>  </td>
          <td id ="submitted_on">  <%=  t.created_at.strftime("%d %b. %Y") %>  </td>
      </tr>
      </div>
      <% end %>
      </div>
    </table>
  </div>
  <% end %>
</div>

<div style="text-align:center">
        <h5><b><%= t('utilization_table') %></b> </h5> </p>
</div>
<div id = "utilization">
    <table id="calculation" class="table table-bordered table-striped table-sm" cellspacing="10">
      <div class="form-group">
      <thead class="thead-inverse">
      <tr>
          <th> <%= t('project_name') %></th>
          <th> <%= (4.day.ago).to_date%> [hour] </th>
          <th> <%= (3.day.ago).to_date %> [hour] </th>
          <th> <%= (2.day.ago).to_date %> [hour] </th>
          <th> <%= (Date.yesterday).to_date %> [hour] </th>
          <th> <%= (Date.today).to_date %>,Today [hour] </th>
          <th> Grand Total [hour] </th>
          <th> Percentage Utilized(%) </th>
      </tr>
      <% @all_projects.each do |proj| %>
      <tr id = "<%= proj[0] %>" > 
        <td> <%= proj[1] %> </td>
        <td><%= @total_hours_4dayb4[proj[0]] %></td>
        <td><%= @total_hours_3dayb4[proj[0]] %></td>
        <td><%= @total_hours_dayb4yes[proj[0]] %></td>
        <td><%= @total_hours_yest[proj[0]] %></td>
        <td><%= @total_hours_today[proj[0]] %></td>
        <td> <%= @total_hours_in_last_5_days_4project[proj[0]] %></td>
        <td> <%= @percentage[proj[0]] %></td>
      </tr>
      <% end %>
      <tr> 
        <td> Total </td>
        <td> <%= @total_hours_worked_4dayb4 %></td>
        <td> <%= @total_hours_worked_3dayb4 %></td>
        <td> <%= @total_hours_worked_dayb4yest %></td>
        <td> <%= @total_hours_worked_yest %></td>
        <td> <%= @total_hours_worked_today %></td>
        <td> <%= @total_hours_worked_for_last_5_days %></td>
        <td> <%= @total_perc_in_last_5_days_project %></td>
      </tr>   
      </thead>
      </div>
      </div>
    </table>
  </div>
</div>
